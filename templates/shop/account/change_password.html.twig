{% extends 'shop/layout.html.twig' %}
{% block title %}{{ 'base.my_account'|trans }}{% endblock title %}

{% block shop_content %}

{{ form_start(form) }}
{{ form_row(form.oldPassword, {
        'label': 'user.current_password'|trans,
    }) }}
{{ form_row(form.newPassword.first, {
        'label': 'user.new_password'|trans,
    }) }}
{{ form_row(form.newPassword.second, {
        'label': 'user.repeat_password'|trans,
    }) }}

<input type="submit" value="{{ 'user.validate'|trans }}" class="btn btn-primary">
{{ form_end(form) }}

{% endblock %}