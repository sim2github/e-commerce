{% extends 'shop/layout.html.twig' %}
{% block title %}Commandes{% endblock title %}

{% block shop_content %}

<header class="mb-4">
    <h1>{{ 'user.my_orders'|trans }}</h1>
</header>

<nav>
    <ul class="nav nav-tabs user-account-tabs">
        <li class="nav-item">
            <a href="{{ path('user_account') }}" class="nav-link active">{{ 'user.account'|trans }}</a>
        </li>
        <li class="nav-item">
            <a href="{{ path('user_orders') }}" class="nav-link active">{{ 'user.orders'|trans }}</a>
        </li>
    </ul>
</nav>

<div class="card">
    <div class="card-body">
        {% if orders is empty %}
        <p>{{ 'order.no_order'|trans }}</p>
        {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'base.date'|trans }}</th>
                    <th>{{ 'base.status'|trans }}</th>
                    <th>{{ 'order.total'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td>
                        <a href="{{ path('user_order', { 'id': order.id }) }}">{{ order.id }}</a>
                    </td>
                    <td>
                        {{ order.dateCreated|date() }}
                    </td>
                    <td>
                        <div class="badge badge-primary p-2">
                            {{ order.status }}
                        </div>
                    </td>
                    <td>
                        {{ order.transaction.total }} â‚¬
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</div>

{% endblock %}