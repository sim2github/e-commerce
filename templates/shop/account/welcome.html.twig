{% extends 'shop/layout.html.twig' %}

{% block breadcrumb %}
{% if order == true %}
<div class="breadcrumbs">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item active" aria-current="page">{{ 'user.identification'|trans }}</li>
                <li class="breadcrumb-item">{{ 'user.address'|trans }}</li>
                <li class="breadcrumb-item">{{ 'base.delivery'|trans }}</li>
                <li class="breadcrumb-item">{{ 'user.summary'|trans }}</li>
                <li class="breadcrumb-item">{{ 'base.payment'|trans }}</li>
            </ol>
        </nav>
    </div>
</div>
{% endif %}
{% endblock breadcrumb %}

{% block shop_content %}

<h1 class="pb-4 text-center">{{ 'user.welcome'|trans }}</h1>

<div class="row pt-4">
    <section class="login col-md pr-4">
        <h4>{{ 'user.already_have_account'|trans }}</h4>
        {{ render(controller('App\\Controller\\SecurityController::login', { 'order': order })) }}
    </section>

    <section class="register col-md border-left pl-md-4 mt-4 mt-md-0">
        <h4>{{ 'user.new_customer'|trans }}</h4>
        {{ render(controller('App\\Controller\\SecurityController::register', { 'order': order })) }}
    </section>
</div>

{% endblock %}