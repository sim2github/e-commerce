{{ form_row(address_form.address1, {
    'label': 'user.street'|trans,
}) }}
{{ form_row(address_form.address2, {
    'label': 'user.complement'|trans,
    'required': false,
    'attr': {
        'placeholder': 'user.address_placeholder'|trans,
    },
}) }}
<div class="form-row">
    <div class="col form-group">
        {{ form_label(address_form.postCode, 'user.postal_code'|trans) }}
        {{ form_widget(address_form.postCode) }}
    </div>
    <div class="col form-group">
        {{ form_label(address_form.city, 'user.city'|trans) }}
        {{ form_widget(address_form.city) }}
    </div>
</div>
{{ form_row(address_form.phone, {
    'label': 'user.phone'|trans,
    'required': false,
}) }}