{{ form_start(registrationForm) }}
{{ form_row(registrationForm.email, {
        'label': 'user.email'|trans,
    }) }}
{{ form_row(registrationForm.plainPassword.first, {
        'label': 'user.password'|trans,
    }) }}
{{ form_row(registrationForm.plainPassword.second, {
        'label': 'user.repeat_password'|trans,
    }) }}

{% if order == true %}
<input type="hidden" name="_target_path" value="{{ path('checkout_address') }}" />
{% endif %}

<input type="submit" value="{{ 'user.create'|trans }}" class="btn btn-primary">
{{ form_end(registrationForm) }}