{% extends 'shop/layout.html.twig' %}
{% block title %}{{ 'user.address'|trans }}{% endblock %}

{% block breadcrumb %}
<div class="breadcrumbs">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">{{ 'user.identification'|trans }}</li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'user.address'|trans }}</li>
                <li class="breadcrumb-item">{{ 'base.delivery'|trans }}</li>
                <li class="breadcrumb-item">{{ 'user.summary'|trans }}</li>
                <li class="breadcrumb-item">{{ 'base.payment'|trans }}</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock breadcrumb %}

{% block shop_content %}
<header class="mb-4">
    <h1>{{ 'user.delivery_address'|trans }}</h1>
</header>

{{ form_start(address_form, { 'attr': { 'id': 'address-form' }}) }}
{% include "shop/account/address_form.html.twig" with {'address_form': address_form} %}
{{ form_end(address_form) }}
<input type="submit" form="address-form" value="Suivant" class="btn btn-primary">

{% endblock %}