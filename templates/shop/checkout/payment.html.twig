{% extends 'shop/layout.html.twig' %}
{% block title %}Paiement{% endblock %}

{% block breadcrumb %}
<div class="breadcrumbs">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">{{ 'user.identification'|trans }}</li>
                <li class="breadcrumb-item">{{ 'user.address'|trans }}</li>
                <li class="breadcrumb-item">{{ 'base.delivery'|trans }}</li>
                <li class="breadcrumb-item">{{ 'user.summary'|trans }}</li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'base.payment'|trans }}</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock breadcrumb %}

{% block shop_content %}
<header class="mb-4">
    <h1>{{ 'base.payment'|trans }}</h1>
</header>

<script src="https://js.stripe.com/v3/"></script>

<div class="row">
    <div class="col-md">
        <h4>{{ 'pay.by_cart'|trans }}</h4>
        <div id="card-errors-container" class="my-2 card-errors-container">
            <span class="badge badge-danger">{{ 'pay.error'|trans }}</span>
            <span id="card-errors" class="my-4"></span>
        </div>
        <form action="{{ path('stripe_checkout') }}" method="post" id="payment-form" data-stripe-pk="{{ stripe_pk }}">

            <div class="form-group">
                <label for="card-number">{{ 'pay.number'|trans }}</label>
                <div id="card-number" class="form-control"></div>
            </div>

            <div class="form-row">
                <div class="col">
                    <label for="card-expiry">{{ 'pay.expiration_date'|trans }}</label>
                    <div id="card-expiry" class="form-control"></div>
                </div>
                <div class="col">
                    <label for="card-cvc">{{ 'pay.cryptogram'|trans }}</label>
                    <div id="card-cvc" class="form-control"></div>
                </div>
            </div>


            <input type="submit" value="{{ 'pay.total_price'|trans({'%total_price%': total_price}) }}"
                class="btn btn-primary mt-4">
        </form>
    </div>

    <div class="col-md mt-4 mt-md-0">
        <h4>{{ 'pay.with_paypal'|trans }}</h4>
        <a href="{{ path('paypal_checkout') }}"
            class="basket-checkout__order btn btn-primary">{{ 'pay.pay_with_paypal'|trans }}</a>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="/js/stripeCheckout.js"></script>
{% endblock javascripts %}