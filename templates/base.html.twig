<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}E-commerce{% endblock %}</title>
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <meta name="description" content="E-commerce">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="/build/app.css">
    <script src="/build/app.js"></script>
    {% block stylesheets %}
    {% endblock %}
</head>

<body class="">
    <header class="top-header bg-white">
        <nav class="top-nav navbar navbar-light">
            <a href="{{ path('index') }}" class="navbar-brand">Brand</a>

            <div class="nav-right d-flex mx-2">
                <div class="dropdown mr-4">
                    <i class="far fa-user"></i>
                    <div class="dropdown-menu">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('user_account') }}" class="dropdown-item">{{ 'base.my_account'|trans }}</a>
                        {% else %}
                        <a href="{{ path('user_welcome') }}" class="dropdown-item">{{ 'base.connection'|trans }}</a>
                        <a href="{{ path('user_welcome') }}" class="dropdown-item">{{ 'base.new_account'|trans }}</a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                        <a class="dropdown-item" href="{{ path('admin_index') }}">{{ 'base.administration'|trans }}</a>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="dropdown-item" href="{{ path('security_logout' )}}">{{ 'base.logout'|trans }}</a>
                        {% endif %}
                    </div>
                </div>

                <a class="basket-link mx-2" href="{{ path('basket_show') }}">
                    <i class="fas fa-shopping-cart"></i>
                    <div class="basket-count d-flex justify-content-center align-items-center">
                        <span class="text-white">
                            {{ render(controller('App\\Controller\\BasketController::productCount')) }}
                        </span>
                    </div>
                </a>
            </div>
        </nav>
    </header>

    {% if app.request.attributes.get('_route') == 'index' %}
    <div class="hero"></div>
    {% endif %}

    {% block breadcrumb %}{% endblock breadcrumb %}

    {% if app.session.flashbag.peekAll is not empty %}
    <div class="flash container mt-2" id="flash">
        {% for label, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            <span class="font-weight-bold">{{ message }}</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}
        {% endfor %}
    </div>
    {% endif %}

    {% block content %}{% endblock %}

    <footer class="footer mt-5">
        <div class="footer__upper py-5">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md">
                        <ul class="footer__nav p-0">
                            <li><a href="#">{{ 'base.contact'|trans }}</a></li>
                            <li><a href="#">{{ 'base.means_of_payment'|trans }}</a></li>
                            <li><a href="#">{{ 'base.delivery'|trans }}</a></li>
                            <li><a href="#">{{ 'base.terms_of_sales'|trans }}</a></li>
                        </ul>
                    </div>
                    <div class="col-12 col-md">
                        <p>{{ 'base.find_us_on'|trans }}</p>
                        <ul class="d-flex flex-row social-icons p-0">
                            <li class="mx-1 border">
                                <a href="#" class="social-link d-flex justify-content-center align-items-center">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li class="mx-1 border">
                                <a href="#" class="social-link d-flex justify-content-center align-items-center">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li class="mx-1 border">
                                <a href="#" class="social-link d-flex justify-content-center align-items-center">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-lower bg-white">
            <div class="container d-flex justify-content-between align-items-center border-top">
                <span class="p-4 text-secondary">Copyright Â© 2018 Mathieu Coudurier</span>
                <div class="footer-img">
                    <img class="px-2" src="/img/visa.png" alt="visa">
                    <img class="px-2" src="/img/paypal.png" alt="paypal">
                    <img class="px-2" src="/img/mastercard.png" alt="mastercard">
                </div>
            </div>
        </div>
        {% block footer %}{% endblock %}
    </footer>
    <script src="/js/flash.js"></script>
    {% block javascripts %}{% endblock %}
</body>

</html>